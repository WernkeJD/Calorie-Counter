{
    "manifest_version": 3,
    "name": "Calorie Counter",
    "version": "2.0.0",
    "description": "An extension that will automatically track calories for a given recipie on a stie",
    "action":{
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "images/calorieIcon.png"
    },
    "permissions":[
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}